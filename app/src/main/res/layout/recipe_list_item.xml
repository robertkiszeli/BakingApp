<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/recipe_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="10dp"
    android:elevation="12dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginEnd="0dp"
            android:alpha="0.3"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/recipe_image"
            app:layout_constraintEnd_toEndOf="@+id/recipe_image"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/recipe_name"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <ImageView
            android:id="@+id/peoples_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/peoples"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/recipe_name"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            android:layout_marginBottom="0dp"
            app:layout_constraintStart_toStartOf="@+id/view"
            android:layout_marginStart="16dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/servings_number"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="100"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/peoples_image"
            app:layout_constraintStart_toEndOf="@+id/peoples_image"
            app:layout_constraintTop_toTopOf="@+id/peoples_image" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ingredients"
            android:id="@+id/ingredients_image"
            app:layout_constraintTop_toTopOf="@+id/peoples_image"
            app:layout_constraintBottom_toBottomOf="@+id/peoples_image"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/steps_image"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/servings_number"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.46" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ingredients_number"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:text="100"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/peoples_image"
            app:layout_constraintTop_toTopOf="@+id/peoples_image"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ingredients_image"
            android:layout_marginStart="8dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/steps"
            android:id="@+id/steps_image"
            app:layout_constraintTop_toTopOf="@+id/peoples_image"
            app:layout_constraintBottom_toBottomOf="@+id/peoples_image"
            app:layout_constraintEnd_toStartOf="@+id/steps_number"
            android:layout_marginEnd="8dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/steps_number"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:text="100"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/peoples_image"
            app:layout_constraintBottom_toBottomOf="@+id/peoples_image"
            app:layout_constraintEnd_toEndOf="@+id/view"
            android:layout_marginEnd="16dp" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>